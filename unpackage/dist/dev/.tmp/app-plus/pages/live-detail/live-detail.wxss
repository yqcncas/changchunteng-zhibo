.live_video {
  width: 100vw;
  vertical-align: middle;
}
.total_on_line_man {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  left: 0;
  width: 100vw;
  height: 40px;
  background: #FFFFFF;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 12px;
}
.total_on_line_man ._span:first-child {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #97E85F;
  margin-left: 30rpx;
  margin-right: 10rpx;
}
.total_on_line_man ._span:nth-child(2) {
