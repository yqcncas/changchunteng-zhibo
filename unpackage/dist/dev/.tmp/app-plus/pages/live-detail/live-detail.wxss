/* 聊天消息列表 */
.chat-msg-list .item {
  padding: 30rpx;
  padding-bottom: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.chat-msg-list .item > .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f2f2f2;
}
.chat-msg-list .item > view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.chat-msg-list .item > view > view:first-child {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 10rpx;
}
.chat-msg-list .item > view > view:first-child .name {
  margin-right: 10rpx;
  font-size: 12px;
}
.chat-msg-list .item > view > view:first-child .label {
  border-radius: 2px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0rpx 8rpx;
  font-size: 10px;
  color: #8987DF;
  background: rgba(137, 135, 223, 0.3);
}
.chat-msg-list .item > view > view:first-child .label.teacher-label {
  color: #618FF0;
  background: rgba(97, 143, 240, 0.3);
}
.chat-msg-list .item > view .content {
  max-width: 430rpx;
  padding: 30rpx;
  border-radius: 8rpx;
  background: #FFFFFF;
  word-wrap: break-word;
}
.chat-msg-list .item.left {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.chat-msg-list .item.left > .avatar {
  margin-right: 30rpx;
}
.chat-msg-list .item.right {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.chat-msg-list .item.right > .avatar {
  margin-left: 30rpx;
}
.chat-msg-list .item.right > view > view:first-child {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.chat-msg-list .item.right > view > view:first-child .label {
  margin-right: 10rpx;
}
.chat-msg-list .item.right > view > .content {
  background: #8987DF;
  color: #FFFFFF;
}
