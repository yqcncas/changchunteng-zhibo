page {
  height: 100vh;
  overflow: hidden;
}
input {
  font-size: 14px;
}
.container .bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
}
.container .test {
  width: 100px;
  height: 100px;
  background: #FFFFFF;
}
.container .mobile {
  width: 424rpx;
  padding-left: 30rpx;
  height: 70rpx;
  background: #FFFFFF;
  border-radius: 2px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.container .code-container {
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
  width: 394rpx;
  padding: 0 30rpx;
  height: 70rpx;
  background: #FFFFFF;
  border-radius: 2px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .code-container input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.container .code-container > view {
  padding-left: 20rpx;
  border-left: 1rpx solid #D8D8D8;
}
.container .code-container > view text:first-child {
  font-size: 12px;
  color: #4A90E2;
}
.container .confirm-register {
  width: 454rpx;
  height: 70rpx;
  background: #FFA645;
  border-radius: 2px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #FFFFFF;
  margin: 100rpx auto 0 auto;
}
.container .confirm-register:active {
  background: #774c1d;
}

