.container .item {
  padding: 30rpx;
  border-bottom: 1px solid #F7F7F7;
}
.container .item > view:first-child text:first-child {
  color: #8987DF;
  margin-right: 30rpx;
}
.container .item > .vip-handle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.container .item > .vip-handle > view {
  margin-top: 20rpx;
  width: 150rpx;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 8rpx;
  color: #FFFFFF;
}
.container .item > .vip-handle > view.recorded {
  background: #618FF0;
}
.container .item > .vip-handle > view.live {
  background: #8987DF;
}
.container .item > .vip-handle > view.not-started {
  background: #F7F7F7;
  color: #9B9B9B;
}

